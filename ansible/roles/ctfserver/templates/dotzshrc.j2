#
# .zshrc
#

export PATH=$HOME/.bin:/usr/local/bin:$PATH

source $HOME/.profile

export ZSH={{ ctfchroot_shell_ohmyzsh_path }}

# See https://github.com/robbyrussell/oh-my-zsh/wiki/Themes
# Earlier used: "agnoster" "robbyrussell" "geometry" "spaceship"
ZSH_THEME="random"

# Uncomment the following line to use case-sensitive completion.
CASE_SENSITIVE="true"

DISABLE_AUTO_UPDATE="true"
DISABLE_AUTO_TITLE="false"
ENABLE_CORRECTION="true"
COMPLETION_WAITING_DOTS="true"
DISABLE_UNTRACKED_FILES_DIRTY="true"
HIST_STAMPS="dd.mm.yyyy"

source $ZSH/oh-my-zsh.sh

export SHELL=zsh

# Plugins to load
plugins=(colored-man-pages colorize command-not-found fancy-ctrl-z gnu-utils jsontools nmap man)

# User configuration

export MANPATH="/usr/local/man:$MANPATH"
export LC_ALL={{ common_locale }}
export LANG={{ common_lang }}

export ZSH_TMUX_AUTOSTART=true
export ZSH_TMUX_UNICODE=true

cd $HOME
